
input,
picker {
  border: 1rpx solid #ccc;
  margin: 10rpx;
  margin-top: 2rpx;
  margin-bottom: 10rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  height: 45rpx;
  border-radius: 5rpx;
  transition: all 0.3s ease;
}
input:hover {
  border: 1rpx solid #007aff;
  box-shadow: 0rpx 0rpx 5rpx 1rpx #eeeeee;
}
picker:hover {
  border: 1rpx solid #007aff;
  box-shadow: 0rpx 0rpx 5rpx 1rpx #eeeeee;
}
label {
  margin-left: 10rpx;
  color: #f34f58;
}
.sub {
  background-color: #f34f58;
  margin: 10rpx;
  margin-top: 30rpx;
  color: white;
  text-align: center;
  font-size: 18rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 5rpx;
}
.pickerView {
  width: 100%;
  position: relative;
  height: 45rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.pickerView picker {
  z-index: 9999;
  background-color: white;
}
.border-center {
  border-top: 1rpx solid gray;
  width: 50%;
  margin: 0 auto;
  position: relative;
  top: 25rpx;
}
.subRed {
  font-size: 20rpx;
  color: red;
}
.subGray {
  font-size: 20rpx;
  color: #ffa400;
}

